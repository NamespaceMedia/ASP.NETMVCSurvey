@model IEnumerable<MVCSurvey.Infrastructure.Models.Survey.SurveyModel>

@{
    ViewBag.Title = "Take A Survey";
}

@Styles.Render("~/Content/Survey/bundle")

<div class="survey-centered survey-content">

    <h2>Available Surveys</h2>

    <hr />
    <br />

    <ul class="survey-ul-no-bullet">
        @foreach (var survey in Model)
        {
            <li>@Html.ActionLink(survey.Name, "Take", "Survey", new { surveyModelId = survey.SurveyID }, null)</li>
        }
    </ul>

    <br />

    <input type="button" value="Back" id="btnSurveyCancel"/>
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
}

<script type="text/javascript">
    $(document).ready(function() {
        $("#btnSurveyCancel").click(function () {
            document.location.href = '@ViewBag.ReferrerUrl';
        });
    });
</script>